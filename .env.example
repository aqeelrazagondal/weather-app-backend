PORT=3000
NODE_ENV=development

# CORS
# Comma-separated list. In dev, localhost origins for your frontend apps.
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3001

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=weather_db

# Redis Cache
# Set USE_REDIS=false to fall back to in-memory cache (useful for local dev without Redis)
USE_REDIS=true
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
# Leave empty if no password is set for your local Redis
REDIS_PASSWORD=

# OpenWeather
# Replace with your own API key. Never commit real secrets to VCS.
OPENWEATHER_API_KEY=<your_openweather_api_key>
OPENWEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Logging (optional)
# LOG_LEVEL can be error|warn|info|debug; your logger config may use this
LOG_LEVEL=info

# Throttling (optional app-level; provider limits still enforced server-side)
# Customize if you add Nest Throttler; otherwise these are safe placeholders
THROTTLE_TTL_SECONDS=60
THROTTLE_LIMIT=120