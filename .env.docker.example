# .env.docker.example
# App
NODE_ENV=production
PORT=3000

# Postgres (TypeORM)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=app_db
DB_USERNAME=app_user
DB_PASSWORD=<POSTGRES_PASSWORD>
DB_SSL=false

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Throttling/Cache
CACHE_TTL_SECONDS=60

# External API
OPENWEATHER_API_KEY=<YOUR_API_KEY>
OPENWEATHER_API_URL=https://api.openweathermap.org